[Unit]
Description=Screenly Web UI
After=network-online.target

[Service]
WorkingDirectory=/home/pi/screenly
User=pi
ExecStartPre=/home/pi/screenly/.venv/bin/python /home/pi/screenly/bin/wait.py
ExecStart=/home/pi/screenly/.venv/bin/python /home/pi/screenly/server.py
Restart=always
RestartSec=5
Environment=PYTHONPATH=/home/pi/screenly

[Install]
WantedBy=multi-user.target
